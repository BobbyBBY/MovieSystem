<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#dcdcdc"
        >
        <RelativeLayout style="@style/title_bar_style_setting"
            android:id="@+id/medicineChestMessageTitle"
            >
            <Button
                style="@style/back_btn"
                android:id="@+id/backBtn"
                android:textColor="#ffffff"
                />
            <TextView
                style="@style/title"
                android:id="@+id/toptitle"
                android:text="编辑电影"
                />
            <Button
                android:id="@+id/save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="保存"
                android:background="#00FF7F"
                android:textColor="#ffffff"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/medicineChestMessageTitle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical"
                >
                <RelativeLayout
                    style="@style/settingModular"
                    >
                    <TextView
                        style="@style/setting_title"
                        android:text="开始时间"
                        />
                    <EditText
                        android:id="@+id/starttimeet"
                        style="@style/setting_text"
                        android:text="2019/07/06/14/33"
                        />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/settingModular"
                    >
                    <TextView
                        style="@style/setting_title"
                        android:text="价格"
                        />
                    <EditText
                        style="@style/setting_text"
                        android:id="@+id/price"
                        />

                </RelativeLayout>
                <RelativeLayout
                    style="@style/settingModular"
                    >
                    <TextView
                        style="@style/setting_title"
                        android:text="特效"
                        />
                    <EditText
                        style="@style/setting_text"
                        android:id="@+id/se"
                        />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>